<div class="content-area">
  <div class="post">
    <!-- Post Content -->
    <div class="container">
      <article>
        <!-- Title date & tags -->
        <div class="post-header">
          <h1 class="entry-title">
            <%- page.title || theme.default_post_title || "Untitled" %>
              <% if (page.subtitle && page.subtitle.length) { %>
                <p>
                  <%- page.subtitle %>
                </p>
                <% } %>
          </h1>
          <p class="posted-on">
            <%= page.date.format(config.date_format) %>
          </p>
          <div class="tags-links">
            <% if (page.tags) { %>
              <% page.tags.each(function(tag){ %>
                <a href="<%= config.root %>tags/<%= tag.name %>/" rel="tag">
                  <%- tag.name %>
                </a>
                <% }); %>
                  <% } %>
          </div>
        </div>
        <!-- Post Main Content -->
        <div class="entry-content">
          <%- page.content %>
        </div>

        <div style="text-align:center;border-top: 1px solid #ccc;margin-top: 2em;">
          <p>下面是我的微信</p>
          <p>欢迎骚扰</p>
          <img width="250" src="https://oss.wengwang.me/images/ww_wechat_qrcode.jpg" alt="ww1o01">
          <p>当然你也可以选择分享我的这篇博文</p>
          <img src="<%- qrcode(url, {size: 4}) %>" />
        </div>

      </article>
    </div>
    <!-- Pre or Next -->
    <div class="nav-links">
      <% if (page.prev) { %>
        <div class="nav-previous">
          <a href="<%- config.root %><%- page.prev.path %>" rel="prev"><span class="meta-arraw meta-arraw-left"></span> <%- __('prev')%></a>
        </div>
        <% } %>
          <% if (page.next) { %>
            <div class="nav-next">
              <a href="<%- config.root %><%- page.next.path %>" rel="prev">
                <%- __('next')%> <span class="meta-arraw meta-arraw-right"></span></a>
            </div>
            <% } %>
    </div>

  </div>
</div>